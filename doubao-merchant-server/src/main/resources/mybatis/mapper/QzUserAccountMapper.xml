<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.doubao.merchant.server.recharge.dao.QzUserAccountMapper">
    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.doubao.merchant.api.recharge.entity.QzUserAccountVo" id="qzUseAccountMap">
        <result property="id" column="id"/>
        <result property="amount" column="amount"/>
        <result property="lock_amount" column="lock_amount"/>
        <result property="last_update_time" column="last_update_time"/>
        <result property="create_time" column="create_time"/>
        <result property="shop_user_id" column="shop_user_id"/>
    </resultMap>
    <select id="queruUserAccountInfo" resultMap="qzUseAccountMap">
        select * from qz_user_account where shop_user_id = #{shop_user_id}
    </select>

    <update id="updateUserAccount" parameterType="com.doubao.merchant.api.recharge.entity.QzUserAccountVo">
        update qz_user_account
        <set>
            <if test="amount != null">`amount` = #{amount},</if>
            <if test="last_update_time != null">`last_update_time` = #{last_update_time}</if>
        </set>
        where shop_user_id = #{shop_user_id}
    </update>

    <insert id="saveQzUserAccountVo" parameterType="com.doubao.merchant.api.recharge.entity.QzUserAccountVo" useGeneratedKeys="true" keyProperty="id">
        insert into qz_user_account(
            `shop_user_id`,
            `amount`,
            `lock_amount`,
            `last_update_time`,
            `create_time`,
            `version`)
        values(
                  #{shop_user_id},
                  #{amount},
                  #{lock_amount},
                  #{last_update_time},
                  #{create_time},
                  #{version})
    </insert>

    <update id="update" parameterType="com.doubao.merchant.api.recharge.entity.QzUserAccountVo">
        update qz_user_account
        <set>
            <if test="amount != null">`amount` = #{amount},</if>
            <if test="lock_amount != null">`lock_amount` = #{lock_amount},</if>
            <if test="last_update_time != null">`last_update_time` = #{last_update_time},</if>
            <if test="create_time != null">`create_time` = #{create_time},</if>
            <if test="shop_user_id != null">`shop_user_id` = #{shop_user_id}</if>
        </set>
        where id = #{id}
    </update>
</mapper>